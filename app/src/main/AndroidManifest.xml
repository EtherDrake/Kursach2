<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.admin.budget3">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Login"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Register"
            android:label="@string/title_activity_register"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".shoppingListActivity"
            android:label="@string/title_activity_shopping_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddIncome"
            android:label="@string/title_activity_add_income"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MainMenuActivity"></activity>
        <activity android:name=".AddOutlay" />
        <activity
            android:name=".OutlayList"
            android:label="@string/title_activity_outlay_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".categoriesList"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity android:name=".shoppingListsList" />
        <activity
            android:name=".MainDrawer"
            android:label="@string/title_activity_main_drawer"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".balance"
            android:label="@string/title_activity_balance"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>